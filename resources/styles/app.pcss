@import "~highlight.js/styles/a11y-dark.css";

@tailwind base;

[x-cloak] {
    display: none !important;
}

button.pagination {
    @apply w-full text-gray-700 text-sm text-center font-bold bg-gray-100 p-2 border border-gray-300 rounded shadow transform duration-200;

    &:hover,
    &:focus {
        @apply text-white font-bold bg-blue-500 border-transparent;
    }

    &:focus {
        @apply outline-none shadow-outline;
    }

    &:disabled {
        @apply border-transparent cursor-not-allowed;
    }

    &.control {
        &:disabled {
            @apply text-gray-700 bg-gray-100 opacity-75;
        }
    }

    &.page {
        &:disabled {
            @apply text-white font-bold bg-blue-500;
        }
    }
}

@screen md {
    button.pagination.control {
        @apply px-4;
    }
}

.emoji {
    @apply inline-block align-top font-emoji h-6 w-6;
}

.post-preview {
    & + & {
        @apply mt-4;
    }
}

.markdown {
    @apply leading-snug text-lg;

    :first-child {
        @apply mt-0;
    }

    :last-child {
        @apply mb-0;
    }

    a {
        @apply cursor-pointer text-blue-700;

        &:hover,
        &:focus {
            @apply text-blue-900;
        }

        &:focus {
            @apply outline-none shadow-outline;
        }
    }

    p {
        @apply mb-4 font-sans text-justify;

        > code {
            @apply inline align-middle font-mono text-base bg-gray-300 rounded py-1 px-2;
        }
    }

    pre {
        @apply rounded scrolling-touch;
    }

    ol {
        @apply list-decimal;
    }

    ul {
        @apply list-disc;
    }

    ol, ul {
        @apply list-inside ml-4 my-2;

        > li {
            > ol {
                list-style-type: lower-roman;
            }

            > ul {
                list-style-type: circle;
            }

            > ol, ul {
                @apply my-0;

                > li {
                    > ol {
                        list-style-type: lower-latin;
                    }

                    > ul {
                        list-style-type: square;
                    }
                }
            }
        }
    }

    h1, h2, h3, h4, h5, h6 {
        @apply font-bold border-b border-gray-300 mt-5 mb-1;

        &:hover,
        &:focus {
            .permalink {
                @apply inline text-gray-700 ml-2;
            }
        }

        .permalink {
            @apply hidden;
        }
    }

    h1 {
        @apply text-3xl;
    }

    h2 {
        @apply text-2xl;
    }

    h3 {
        @apply text-xl;
    }

    h4 {
        @apply text-lg;
    }

    h5 {
        @apply text-base;
    }

    h6 {
        @apply text-sm;
    }
}

@tailwind components;

@tailwind utilities;
