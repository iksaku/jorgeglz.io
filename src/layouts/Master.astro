---
import '../assets/css/app.css'

const { class: bodyClass = '' } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="generator" content={Astro.generator}>

        <slot name="meta" />
    </head>

    <body class={bodyClass}>
        <slot />
    </body>
</html>